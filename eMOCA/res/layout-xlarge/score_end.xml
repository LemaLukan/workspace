<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/background_gradient">

    <include layout="@layout/header" />

    <include layout="@layout/title" />

    <LinearLayout
            style="@style/content_margins"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ScrollView
                android:layout_height="match_parent"
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/titleText"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:text="@string/vs_exec"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_1"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/naming_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_2"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/attention1_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_3"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/attention2_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_4"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/attention3_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_5"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/language1_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_6"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/language2_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_7"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/abstraction_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_8"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/delayed_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_9"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/orient_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/sec_10"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/bonus"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/bonusText"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <TextView
                        android:text="@string/total_score"
                        style="@style/score_base_layout_padding"
                        >
                </TextView>
                <TextView
                        android:id="@+id/totalText"
                        style="@style/score_base_layout_padding"
                        android:paddingTop="15dp"
                        >
                </TextView>
                <ImageView
                        style="@style/exit_button"
                        android:src="@drawable/btn_exit_final"
                        android:id="@+id/button1"
                        android:onClick="exitScore"
                        android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
