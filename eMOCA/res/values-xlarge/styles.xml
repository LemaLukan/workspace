<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="content_margins">
        <item name="android:layout_marginLeft">70dip</item>
        <item name="android:layout_marginRight">70dip</item>
    </style>
    <style name="page_title" parent="@style/content_margins">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:text">@string/default_title</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@drawable/page_title</item>
    </style>
    <style name="green_button">
        <item name="android:layout_width">400dip</item>
        <item name="android:layout_height">150dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">15dip</item>
        <item name="android:background">@drawable/green_button</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_marginTop">20dip</item>
    </style>
    <style name="paragraph" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="large_text">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="gray_box_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="file_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/trans_black_font</item>
        <item name="android:textSize">20dip</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="base_layout" parent="@style/large_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="base_layout_padding" parent="@style/base_layout">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="base_padding" parent="@style/large_text">
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="score_base_layout_padding" parent="@style/base_padding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="submit_button" parent="@style/small_gray_button">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:src">@drawable/text_submit</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>
