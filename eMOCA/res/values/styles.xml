<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="theme" parent="android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:background">#00000000</item>
    </style>
    <style name="paragraph" parent="android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="purple_button">
        <item name="android:layout_width">300dip</item>
        <item name="android:layout_height">120dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">15dip</item>
        <item name="android:background">@drawable/purple_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_marginTop">20dip</item>
    </style>
    <style name="small_gray_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">15dip</item>
        <item name="android:background">@drawable/gray_button</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_marginTop">20dip</item>
    </style>

    <style name="play_button" parent="@style/small_gray_button">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:src">@drawable/btn_play</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="stop_button" parent="@style/small_gray_button">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:src">@drawable/btn_stop</item>
        <item name="android:padding">5dip</item>
    </style>
    <style name="minus_button" parent="@style/small_gray_button">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:src">@drawable/btn_minus</item>
        <item name="android:padding">5dip</item>
    </style>
    <style name="plus_button" parent="@style/small_gray_button">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:src">@drawable/btn_plus</item>
        <item name="android:padding">5dip</item>
    </style>
    <style name="submit_button" parent="@style/small_gray_button">
        <item name="android:background">@drawable/small_button</item>
        <item name="android:src">@drawable/text_submit</item>
    </style>

    <style name="green_button">
        <item name="android:layout_width">400dip</item>
        <item name="android:layout_height">150dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">15dip</item>
        <item name="android:background">@drawable/green_button</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:layout_marginTop">20dip</item>
    </style>
    <style name="start_assessment" parent="@style/green_button">
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/start_main</item>
    </style>
    <style name="start_button" parent="@style/green_button">
        <item name="android:scaleType">center</item>
        <item name="android:src">@drawable/start_text</item>
    </style>
    <style name="large_text">
        <item name="android:textSize">19sp</item>
    </style>
    <style name="dialog_button" parent="@style/large_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:padding">15dip</item>
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>
    <style name="content_margins">
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>
    <style name="CustomDialogTheme" parent="android:style/Theme.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="page_title" parent="@style/content_margins">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:text">@string/default_title</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:background">@drawable/page_title</item>
    </style>

    <style name="file_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/trans_black_font</item>
        <item name="android:textSize">18dip</item>
        <item name="android:paddingLeft">10dip</item>
    </style>

    <style name="gray_box_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">10</item>
        <item name="android:background">@drawable/gray_box</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="gray_box_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="gray_box_edit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="gray_box_contain_4">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">4</item>
    </style>

    <style name="gray_box_contain_6" parent="@style/gray_box_contain_4">
        <item name="android:layout_weight">6</item>
    </style>

    <style name="exit_button" parent="@style/green_button">
        <item name="android:background">@drawable/small_button</item>
    </style>

    <style name="audio_bar">
        <item name="android:layout_width">187dp</item>
        <item name="android:layout_height">166dp</item>
    </style>
</resources>
