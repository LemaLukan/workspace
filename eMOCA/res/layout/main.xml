<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background_gradient">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/background_gradient">

        <ImageView
                android:id="@+id/main_logo"
                android:src="@drawable/main_logo"
                android:layout_width="440dip"
                android:layout_height="50dip"
                android:layout_marginTop="10dip"
            />
            <ImageView
                    style="@style/start_assessment"
                    android:id="@+id/startButton"
                    android:onClick="startTest" />
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:layout_marginBottom="20dip"
                    android:paddingRight="5dip"
                    android:layout_width="150dip"
                    android:layout_height="25dip"
                    android:src="@drawable/export_button"
                    android:background="@drawable/button_dots"
                    android:id="@+id/startManager"
                    android:onClick="startManager"
                />
            <ImageView
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="5dip"
                    android:paddingRight="5dip"
                    android:layout_width="150dip"
                    android:layout_height="25dip"
                    android:src="@drawable/mark_button"
                    android:background="@drawable/button_dots"
                    android:id="@+id/deleteButton"
                    android:onClick="scoreTest"
                />
            <ImageView
                    android:layout_marginBottom="20dip"
                    android:layout_marginLeft="5dip"
                    android:layout_width="150dip"
                    android:layout_height="25dip"
                    android:src="@drawable/about_button"
                    android:background="@color/bk_gradient_fix"
                    android:id="@+id/aboutButton"
                    android:onClick="about"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="75dip"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_button"
            android:id="@+id/exitButton"
            android:onClick="exitMoca"
        />

</RelativeLayout>
